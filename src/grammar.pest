Word = _{
  ASCII_ALPHA+
}

Hour = {
  "h"
}

Minute = {
  "minute" | "m"
}

Second = {
  "seconds" | "s"
}

Duration = {
  (ASCII_DIGIT+ ~ (Hour | Minute | Second))
  | (ASCII_DIGIT+ ~ " " ~ (Hour | Minute | Second))
}

Expr = _{
  (Word | Duration)
  ~ (" " ~ (Word | Duration))*
}

Input = _{
  SOI

  ~ Expr

  ~ EOI
}
